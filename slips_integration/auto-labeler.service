[Unit]
Description=ML Ad Detector Auto Traffic Labeler
After=network.target redis.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/ficus/Documents/Project-Code/IPS/karens-ips
Environment="PYTHONPATH=/home/ficus/Documents/Project-Code/IPS/karens-ips"
