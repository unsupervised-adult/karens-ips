{
  "blocking": {
    "enabled": true,
    "mode": "active",
    "block_ips": true,
    "block_urls": true,
    "confidence_threshold_for_blocking": 0.7
  },
  "detection_thresholds": {
    "ad_duration_max": 120,
    "ad_duration_min": 5,
    "ad_min_bytes": 5000,
