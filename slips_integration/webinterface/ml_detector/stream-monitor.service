[Unit]
Description=SLIPS Real-time Stream Ad Monitor
After=network.target redis.service slips.service
Wants=redis.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/StratosphereLinuxIPS
ExecStart=/opt/StratosphereLinuxIPS/venv/bin/python3 -u /opt/StratosphereLinuxIPS/simple_ml_feeder.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=stream-monitor

Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
