Cmnd_Alias SURICATA_CMDS = /usr/bin/systemctl status suricata, \
                           /usr/bin/systemctl is-active suricata, \
                           /usr/bin/systemctl show suricata, \
                           /usr/bin/systemctl reload suricata, \
                           /usr/bin/systemctl restart suricata, \
                           /usr/bin/suricata-update, \
                           /usr/bin/suricatasc *, \
                           /usr/sbin/nft list set inet home blocked4

Cmnd_Alias SLIPS_WEB_WRITE = /usr/bin/tee /etc/suricata/rules/custom.rules, \
                             /usr/bin/tee /etc/suricata/suricata.yaml

root ALL=(ALL) NOPASSWD: SURICATA_CMDS, SLIPS_WEB_WRITE
www-data ALL=(ALL) NOPASSWD: SURICATA_CMDS
