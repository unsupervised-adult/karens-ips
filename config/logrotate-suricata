/var/log/suricata/*.log /var/log/suricata/*.json {
    daily
    rotate 7
    maxage 7
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    postrotate
        /bin/kill -HUP $(cat /var/run/suricata.pid 2>/dev/null) 2>/dev/null || true
    endscript
    maxsize 1G
    size 500M
}

/var/log/suricata/eve.json {
    hourly
    rotate 48
    maxage 2
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    postrotate
        /bin/kill -HUP $(cat /var/run/suricata.pid 2>/dev/null) 2>/dev/null || true
    endscript
    maxsize 2G
    size 1G
}
